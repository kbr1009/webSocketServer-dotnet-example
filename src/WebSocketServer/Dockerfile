#See https://aka.ms/customizecontainer to learn how to customize your debug container and how Visual Studio uses this Dockerfile to build your images for faster debugging.

FROM mcr.microsoft.com/dotnet/aspnet:6.0 AS base
WORKDIR /app

# 8000ポートで受け付けるように設定する
EXPOSE 8080
ENV ASPNETCORE_URLS http://+:8080

# Change timezone to local time
ENV TZ=Asia/Tokyo
RUN ln -snf /usr/share/zoneinfo/$TZ /etc/localtime && echo $TZ > /etc/timezone

FROM mcr.microsoft.com/dotnet/sdk:6.0 AS build
WORKDIR /src
COPY ["src/WebSocketServer/WebSocketServer.csproj", "src/WebSocketServer/"]
RUN dotnet restore "src/WebSocketServer/WebSocketServer.csproj"
COPY . .
WORKDIR "/src/src/WebSocketServer"
RUN dotnet build "WebSocketServer.csproj" -c Release -o /app/build

FROM build AS publish
RUN dotnet publish "WebSocketServer.csproj" -c Release -o /app/publish /p:UseAppHost=false

FROM base AS final
WORKDIR /app
COPY --from=publish /app/publish .
ENTRYPOINT ["dotnet", "WebSocketServer.dll"]